// tsconfig.json

{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES2020",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    // ИСПРАВЛЕНИЕ: Устанавливаем moduleResolution в "bundler" для лучшей совместимости с Next.js 15 (Turbopack/Webpack)
    "module": "esnext",
    "moduleResolution": "bundler", 
    // "moduleResolution": "node" было в оригинале.
    // "bundler" – рекомендовано для современных bundlers (как Next.js) для корректной работы Path Aliases.
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      // ✅ ЭТО ДОЛЖНО БЫТЬ ТОЛЬКО ТАК: @/ указывает на корень проекта
      "@/*": ["./*"] 
    },
    "baseUrl": "."
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
